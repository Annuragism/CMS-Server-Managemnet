<div style="height:60px;"></div>
<div class="container">
  <div class="polaroid">
<h1 class="text-center">CMS</h1>
<h2>Welcome :{{cid}}</h2>

<button class="btn-colour-1 " data-toggle="modal" data-target="#exampleModal1">My Account:</button>
<button class="btn-colour-1 " data-toggle="modal" data-target="#exampleModal2">My Profile:</button>




  </div>
</div>

<!-- Modal of My Profile -->
<!-- Modal -->
<div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">My Profile</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img src="https://www.jumpstarttech.com/files/2018/08/Network-Profile.png" alt="image" height="50px" width="50px"/>
        <hr/>
    {{#each data}}
    Name:{{this.name}}
    <hr/>
    Email:{{this.email}}
    <hr/>
    Mobile:{{this.mobile}}
    <hr/>
    Password:{{this.password}}
    {{/each}}
      </div>

    </div>
  </div>
</div>
<!-- Modal of My Accounts -->
<!-- Modal -->
<div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">My Accounts</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{#each accounts_data}}
        Customer Name:{{this.customer_name}}
        <hr/>
        Plan Price:{{this.plan_price}}
        <hr/>
        Domain Name:{{this.domain_name}}
        <hr/>
        Expiry date:{{this.expiry_date}}
        <hr/>
      Registration Date:{{this.registerd_date}}
        <hr/>
        Total Charges:{{this.total_charges}}
        {{/each}}<br/>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">close
            </button>
      </div>

    </div>
  </div>
</div>













